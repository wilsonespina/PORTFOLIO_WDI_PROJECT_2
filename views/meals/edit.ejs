<form method="POST" action="/meals/<%= meal._id %>">
  <input type="hidden" name="_method" value="PUT">
  <div>
    <label for="name">Name</label>
    <input type="text" name="name" id="name" value="<%= meal.name %>" required>
  </div>
  <div>
    <label for="description">Description</label>
    <input type="text" name="description" id="description" value="<%= meal.description %>">
  </div>
  <fieldset>
    <legend>Address</legend>
    <div>
      <label for="location">Location</label>
      <input type="text" name="location" id="location" value="<%= meal.location %>" required>
    </div>
  </fieldset>

  <div>
    <label for="stars">Stars</label>
    <input type="number" name="stars" id="stars" min="1" max="5" value="<%= meal.stars %>" required>
  </div>
  <div>
    <label for="image">Image</label>
    <input type="text" name="image" id="image" value="<%= meal.image %>">
  </div>

  <button class="button">Update Katsu Spot</button>
</form>
